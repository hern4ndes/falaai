{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "FalaAi Meta-Schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["name", "description", "strict", "schema"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "strict": {
      "type": "boolean",
      "const": true
    },
    "schema": {
      "$ref": "#/$defs/rootSchema"
    }
  },
  "$defs": {
    "allowedType": {
      "anyOf": [
        {
          "type": "string",
          "enum": [
            "string",
            "number",
            "integer",
            "boolean",
            "object",
            "array",
            "null"
          ]
        },
        {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "string",
              "number",
              "integer",
              "boolean",
              "object",
              "array",
              "null"
            ]
          },
          "minItems": 1,
          "uniqueItems": true
        }
      ]
    },

    "rootSchema": {
      "type": "object",
      "required": ["type", "properties"],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "const": "object"
        },
        "properties": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/property"
          }
        },
        "required": {
          "type": "array",
          "items": { "type": "string" }
        },
        "additionalProperties": {
          "type": "boolean"
        }
      }
    },

    "property": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type"],
      "properties": {
        "type": {
          "$ref": "#/$defs/allowedType"
        },
        "description": {
          "type": "string"
        },
        "format": {
          "type": "string",
          "enum": [
            "date",
            "date-time",
            "email",
            "uri",
            "uuid"
          ]
        },
        "properties": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/property"
          }
        },
        "items": {
          "anyOf": [
            { "$ref": "#/$defs/property" }
          ]
        },
        "required": {
          "type": "array",
          "items": { "type": "string" }
        },
        "additionalProperties": {
          "type": "boolean"
        }
      }
    }
  }
}
